# ----------------------------------------------------------------------

# launcher_icon_size = integer
#     The launcher icon size, in pixels.
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~  for both  CrunchBang 11 Waldorf  ~~~~~~
#                                    and   BunsenLabs 8 Hydrogen  RC1 ~~
#launcher_icon_size = 24
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# you can try 0 for automatic icon sizing  (see systray_icon_size !)
launcher_icon_size = 0
