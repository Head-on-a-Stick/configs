#launcher_icon_size = 10
# ----------------------------------------------------------------------

# launcher_icon_theme = name_of_theme
#     Normally, tint2 will detect and use the icon theme of your desktop when you have an XSETTINGS manager running. Otherwise, the theme specified by this option is used.
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~  CrunchBang 11 Waldorf  ~~~~~~
# Specify icon theme names with launcher_icon_theme. 
# if you have an XSETTINGS manager running (like xfsettingsd), tint2 will follow your current theme.
#launcher_icon_theme = gnome-colors-statler
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~  BunsenLabs 8 Hydrogen  RC1 ~~
# Specify icon theme names with launcher_icon_theme.
# if you have an XSETTINGS manager running (like xfsettingsd), tint2 will follow your current theme.
launcher_icon_theme = Faenza-Dark-Bunsen
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# Icon Themes available in BunsenLabs /20150913
#launcher_icon_theme = Adwaita
#launcher_icon_theme = Faenza-Bunsen
#launcher_icon_theme = Faenza-Dark-Bunsen
#launcher_icon_theme = GNOME
# ----------------------------------------------------------------------

# launcher_icon_asb = alpha (0 to 100) saturation (-100 to 100) brightness (-100 to 100)
#     Adjusts the icon color and transparency.
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~  CrunchBang 11 Waldorf  ~~~~~~
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~  BunsenLabs 8 Hydrogen  RC1 ~~
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# alpha
#     the degree of opacity
#            0  no opacity (fully transparent - "it's there, but you can't see it")
#          100  full opacity (no transparency, fully visible)
# saturation
#     "the colourfulness of a colour relative to its own brightness"
#         -100  greyscale, black/white
#          100  "aaall the colours, turned up to 11+"
# brightness
#     the amount of reflected light
#         -100  none (dark)
#          100  bright
# less prominent
#launcher_icon_asb = 75 -20 -15
# almost greyscale
launcher_icon_asb = 70 -45 -10
# full opacity, 100 % greyscale, and just slightly darker
#launcher_icon_asb = 100 -100 -5
# ----------------------------------------------------------------------

# launcher_tooltip = boolean (0 or 1)
#     Whether to show tooltips for the launcher icons.
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~  CrunchBang 11 Waldorf  ~~~~~~
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~  BunsenLabs 8 Hydrogen  RC1 ~~
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
launcher_tooltip = 1
